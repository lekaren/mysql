<!DOCTYPE html>
<html>
<head>
 <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>회원가입</title>
    <script language="javascript" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script>

    function checked()
    {   
        // 이름 정규식
        const getname = /^[가-힝]{2,}$/;
        // 나이 정규식
        const getage = /^[0-9]{1,3}$/;
        // 주소 정규식
        const getadd = /^[가-힣]+동$/;
        // 우편번호 정규식
        const getpost = /[0-9]{5}/;
        // 취미 정규식
        const gethob = /^[가-힣\s]+$/;
        // 전화번호 정규식
        const getnum = /^[0-9]{2,3}-[0-9]{3,4}-[0-9]{4}$/;
        //e-mail 정규식
        const getmail = /[a-z0-9]{2,}@[a-z0-9-]{2,}\.[a-z0-9]{2,}/;
        // 비밀번호 정규식
        const getpwck = /^[a-zA-Z0-9]{4,12}$/;
        
        // 이름 유효성
        if (!getname.test($("#name").val()))
        {
            alert("이름을 다시 입력하세요");
            $("#name").focus();
            return false;
        }
        // 나이 유효성
        if (!getage.test($("#age").val()))
        {
            alert("나이를 입력하세요");
            $("#age").focus();
            return false;
        }
        // 주소 유효성 
        if (!getadd.test($("#add").val()))
        {
            alert("주소를 형식에 맞게 입력하세요");
            $("#add").focus();
            return false;
        }
        // // 우편번호 유효성
        // if (!getpost.test($("#post").val()))
        // {
        //     alert("우편번호를 형식에 맞게 입력하세요");
        //     $("#post").focus();
        //     return false;
        // }
        // // 취미 유효성
        // if (!gethob.test($("#hobby").val()))
        // {
        //     alert("취미를 입력하시오.");
        //     $("#hobby").focus();
        //     return false;
        // }
        // 전화번호 유효성
        if (!getnum.test($("#number").val()))
        {
            alert("전화번호를 입력해 주세요.");
            $("#number").focus();
            return false;
        }
        // email 유효성
        if (!getmail.test($("#id").val()))
        {
            alert("올바른 이메일 형식이 아닙니다.");
            $("#id").focus();
            return false;
        }
        // 비밀번호 유효성
        if (!getpwck.test($("#pw").val()))
        {
            alert("형식에 맞춰 비밀번호를 입력하세요");
            $("#pw").val("");
            $("#pw").focus();
            return false;
        } 
        // 비밀번호 유효성(일치하는지)
        if ($("#pw").val() != $("#pwc").val()) 
        {
            alert("비밀번호가 동일하지 않습니다.");
            $("#pwc").focus();
            return false;
        }        
    }
</script>

</head>
<body>

<form action="/sigu" method="post" onsubmit="return checked()">

<table name="data" width="800" height="230" border="1" align ="center">
    <tr>
        <td colspan="2"  align ="center" bgcolor="#808080" >회원 기본 정보</td>
    </tr>
    <tr>
        <td align ="center">*이름</td>
        <td><input type="text" name="name"  id="name" size="20" /></td>
    </tr>
    <tr>
        <td align ="center">*나이</td>
        <td><input type="text" name="age" id="age" size="20" /></td>
    </tr>
    <tr>
        <td align ="center">생일</td>
        <td><input type="date" name="birth" size="5" maxlength="4" id="birth" /></td>
    </tr>
    <tr>
        <td align ="center">*주소</td>
        <td><input type="text" size="20" name="add" id="add"> 동만 입력 ex)조원동 </td>
    </tr>
    <tr>
        <td align ="center">우편번호</td>
        <td><input type="text" size="20" name="post" id="post"> ex)167-89 </td>
    </tr>
    <tr>
        <td align ="center">취미</td>
        <td><input type="text" size="20" name="hobby" id="hobby"></td>
    </tr>
    <tr>
        <td align ="center">*전화번호</td>
        <td><input type="text" size="20" name="number" id=number> ex)010-1234-5678 </td>
    </tr>
    <tr>
        <td align ="center">*e-mail</td>
        <td><input type="text" name="id" id="id" size="20" /> 예)cpdnql@naver.com</td>
    </tr>
    <tr>
        <td align ="center">*비밀번호</td>
        <td><input type="password" name="pw" id="pw" size="20" maxlength="12" /> 4~12자의 영문 대소문자와 숫자로만 입력 </td>
    </tr>
    <tr>
        <td align ="center">*비밀번호 확인</td>
        <td><input type="password" name="pwck" id="pwc" size="20" maxlength="12" /></td>
    </tr>
    </table><br />
    <div align ="center">
        <input type="submit"  value="회원가입" />
        <input type="reset" value="다시입력" />
    </div>
        </form>
    
</body>
</html>
